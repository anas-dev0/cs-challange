# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-specific-password
SENDER_NAME=AI Interview Coach

# JWT and Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
REFRESH_SECRET=your-super-secret-refresh-key-also-change-in-production
SESSION_SECRET=your-session-secret-for-oauth
ACCESS_EXPIRES_HOURS=2
REFRESH_EXPIRES_DAYS=7

# Database Configuration
# For local development (non-Docker backend)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/utopiahire

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# OAuth Credentials (Google)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/oauth/google/callback

# OAuth Credentials (GitHub)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/oauth/github/callback

# Frontend URL
FRONTEND_URL=http://localhost:5173

# LiveKit Configuration
LIVEKIT_URL=wss://your-livekit-instance.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
